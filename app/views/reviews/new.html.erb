<% if @review.movie %>
<h1>New Review for <%= @review.movie.title %></h1>
<% else %>
<h1>New Review!</h1>
<% end %>

<%= render partial: "layouts/errors", locals: {object: @review}%>

<%= form_for([@review.movie, @review]) do |f|%>
<% if !@review.movie %>
  <%= f.label :movie %>
  <%= f.collection_select :movie_id, Movie.all, :id, :title %>
<% else %>
  <%= f.hidden_field :movie_id %>
<% end %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.label :rating %>
  <%= f.text_field :rating %>
  <%= f.submit %>
<% end %>

<h4><%= link_to 'Back', movies_path, class: "btn btn-info"  %></h4>